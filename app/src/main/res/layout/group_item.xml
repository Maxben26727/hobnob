<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:background="@drawable/nav_item_bg"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:padding="5dp"
    app:cardElevation="4dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#000"
        android:id="@+id/group_image_iv"
        />
    <TextView
        android:id="@+id/groupname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/quantico"
        android:textAllCaps="true"
        android:text="group name"
        android:textColor="#000"
        android:textSize="14sp" />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_msg"
        android:text="last message"
        android:layout_marginStart="10dp"
android:textColor="#3E3D3D"
       android:layout_centerVertical="true"
        android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:visibility="visible"
            android:fontFamily="@font/aubrey"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:background="@drawable/greengradientbg"
            android:id="@+id/msg_count"
            />
    </RelativeLayout>





    </LinearLayout>
