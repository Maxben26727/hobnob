<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:background="@drawable/nav_item_bg"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:padding="5dp"
    app:cardElevation="4dp"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="55dp"

        android:src="@drawable/ic_person_black_24dp"
        android:id="@+id/profile_image"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"

    >
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/quantico"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="1dp"
            android:visibility="gone"
            android:id="@+id/seen"
            android:layout_gravity="center_vertical"

            android:src="@drawable/seen"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="1dp"
            android:visibility="gone"
            android:id="@+id/delivered"
android:layout_gravity="center_vertical"
            android:src="@drawable/delivered"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_msg"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:textColor="#C4C1C1"
            android:maxLines="1"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/img_on"
        app:civ_border_color="#64FA04"
        app:civ_border_width="2dp"
        android:visibility="gone"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_blur_circular_black_24dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#bfbfbf"
        android:id="@+id/img_off"
        android:visibility="visible"
        android:src="@drawable/ic_blur_circular_gray_24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:visibility="gone"
            android:fontFamily="@font/aubrey"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"

            android:background="@drawable/greengradientbg"
            android:id="@+id/msg_count"
            />

    </RelativeLayout>
